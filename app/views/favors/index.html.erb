<% if not user_signed_in? %>
  <div class="hero-unit">
    <h1>Help and be helped!</h1>
    <p>Minute Favors is an online community of people doing quick, online favors for each other. Ask for something quick and easy that can be done using a computer, and you shall receive.</p>
    <p><a href="favors/new" class="btn btn-primary btn-large">Request a favor Â»</a></p>
  </div> 
<% end %>

<div class="row">

  <div class="span8">
    <script type="text/x-handlebars">
      <ul class="nav nav-pills" id="sort-tabs">
        <li class="active">
          {{#view Ember.Button tagName="a" target="App.favorsController" attributeBindings="data-toggle" href="#newest" data-toggle="pill" action="sortNewest"}}Newest{{/view}}
        </li>
        <li>
          {{#view Ember.Button tagName="a" target="App.favorsController" attributeBindings="data-toggle" href="#oldest" data-toggle="pill" action="sortOldest"}}Oldest{{/view}}
        </li>
        <li>
          {{#view Ember.Button tagName="a" target="App.favorsController" attributeBindings="data-toggle" href="#points" data-toggle="pill" action="sortPoints"}}Points{{/view}}
        </li>
      </ul>
    </script>
    <div class="tab-content">
      <div id="newest" class="tab-pane active">
        <div class="page-header">
          <h1>Recent favor requests</h1>
        </div>
      </div>
      <div id="oldest" class="tab-pane">
        <div class="page-header">
          <h1>Oldest favor requests</h1>
        </div>
      </div>
      <div id="points" class="tab-pane">
        <div class="page-header">
          <h1>Most valuable favor requests</h1>
        </div>
      </div>
    </div>
    <script type="text/x-handlebars">
      {{view App.ListFavorsView}}
    </script>
  </div>

  <div class="span4">
  </div>

</div>
<script type="text/javascript">
  $(function() {
    App.favorsController.loadAll(<%= @favors.to_json.html_safe %>);
  });
</script>
