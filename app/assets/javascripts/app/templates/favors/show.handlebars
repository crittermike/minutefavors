{{#with favor}}
  <div class="well favor-display">
    <h2><span class="label label-info">{{points}} pts</span> {{title}}</h2> 

    <ul class="tags">
      {{#each tags}}
        {{view App.TagView tagBinding="this"}}
      {{/each}} 
    </ul>

    <p class="time">{{timeago}}</p>

    {{#if isOwner}}
      {{view App.AdminControlsView favorBinding="this"}}
    {{/if}}

  </div> 
  <div class="row">

    <div class="span8">
      <blockquote>{{{description}}}</blockquote>

      {{#unless isOpen}}
        {{#unless isTaken}}
          <hr />
          <div class="resolution">
            <h3>Resolution:</h3><br />
            {{#if isOwner}}
              {{#if isPending}}
                {{view App.FavorModerateView favorBinding="this"}}
              {{/if}}
            {{/if}}
            <blockquote>{{{resolution}}}</blockquote>
          </div>
        {{/unless}}
      {{/unless}}

    </div>

    <div class="span4">
      {{view App.FavorWorkView favorBinding="this"}}
    </div>

  </div>

{{/with}}
